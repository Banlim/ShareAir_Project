<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/send_album_cardview_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/send_cardview_checkbox"
            android:background="?android:attr/listChoiceIndicatorMultiple"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"/>
        <ImageView
            android:id="@+id/send_album_cardview_image"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/send_album_cardview_check"
            android:layout_marginLeft="5dp"
            android:background="#aabdbdbd"/>
        <TextView
            android:id="@+id/send_album_cardview_imageName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/send_album_cardview_image"
            android:layout_toRightOf="@id/send_album_cardview_image"
            android:layout_marginLeft="13dp"
            android:textSize="17dp"
            android:textColor="#000000"
            android:text="imageName"/>
        <TextView
            android:id="@+id/send_album_cardview_sumImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_below="@id/send_album_cardview_imageName"
            android:layout_alignLeft="@id/send_album_cardview_imageName"
            android:text="imageSum" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>