<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/send_recent_cardview">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/send_recent_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"/>

        <ImageView
            android:id="@+id/send_recent_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@color/cardview_dark_background"
            android:layout_toRightOf="@+id/send_recent_checkbox"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp">
        </ImageView>

        <TextView
            android:id="@+id/send_recent_filename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="filename"
            android:textSize="25dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/send_recent_image"
            android:layout_alignTop="@id/send_recent_image"/>

        <TextView
            android:id="@+id/send_recent_date_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YEAR"
            android:textSize="17dp"
            android:layout_alignBottom="@+id/send_recent_image"
            android:layout_alignLeft="@+id/send_recent_filename"/>

        <TextView
            android:id="@+id/send_recent_date_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MONTH"
            android:textSize="17dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/send_recent_date_year"
            android:layout_alignBottom="@+id/send_recent_image"/>

        <TextView
            android:id="@+id/send_recent_date_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DAY"
            android:textSize="17dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/send_recent_date_month"
            android:layout_alignBottom="@+id/send_recent_image"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>